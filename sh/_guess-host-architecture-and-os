#!@SHELL@
#
# _guess-host-architecture-and-os  -- guess architecture and system info
#

export PATH
PATH="/bin:/usr/bin"

case `uname -s` in
  SunOS)
    case `uname -r` in
      4.*)
	OS=sunos
	case `/usr/bin/arch` in
	  sun4) ARCHITECTURE=sparc32;;
	  *) exit 1;;
	esac
      ;;
      5.*)
	OS=solaris
	case `uname -p` in
	  sparc) ARCHITECTURE=sparc32;;
	  *86) ARCHITECTURE=intel32;;
	  *) exit 1;;
	esac
      ;;
      *) exit 1;;
    esac
    ;;
  AIX)
    OS=aix
    ARCHITECTURE=pwrpc32
    ;;
  Darwin)
    case `uname -p` in
      powerpc)
	ARCHITECTURE=pwrpc32
	case `uname -r` in
	  5*) OS=darwin5; ;; # MacOS X 10.1
	  6*) OS=darwin;  ;; # MacOS X 10.2
	  7*) OS=darwin;  ;; # MacOS X 10.3
	  8*) OS=darwin;  ;; # MacOS X 10.4
	*) exit 1;;
	esac;;
      i386) ARCHITECTURE=intel32; OS=darwin;; # MacOS X 10.4+
    esac
    ;;
  Linux)
    OS=linux
    case `uname -m` in
      *86)
	ARCHITECTURE=intel32
      # we no longer support Linux before the 2.2 kernel.
	case `uname -r` in
	  2.2.*) ;;
	  2.3.*) ;;
	  2.4.*) ;;
	  2.5.*) ;;
	  2.6.*) ;;
	  3.0.*) ;;
	  *) exit 1 ;;
	esac
	;;
      x86_64) ARCHITECTURE=intel64;;
      pwrpc32)
	ARCHITECTURE=pwrpc32
	case `uname -r` in
	  *osfmach*) OS=mklinux ;;
	  *) ;;
	esac
	;;
      *) exit 1;;
    esac
    ;;
  FreeBSD)
    OS=freebsd
    case `uname -m` in
      *86) ARCHITECTURE=intel32;;
      *) exit 1;;
    esac
    ;;
  NetBSD)
    case `uname -r` in
      2*) OS=netbsd2;;
      3*) OS=netbsd;;
      *) exit 1;;
    esac
    case `uname -m` in
      *86) ARCHITECTURE=intel32;;
      *) exit 1;;
    esac
    ;;
  OpenBSD)
    OS=openbsd
    case `uname -m` in
      *86) ARCHITECTURE=intel32;;
      *) exit 1;;
    esac
    ;;
  Windows_NT)
    OS=win32
    case `uname -m` in
      *86) ARCHITECTURE=intel32;;
      *) exit 1;;
    esac
    ;;
  CYGWIN_NT*)
    # If the environment variable LIB7_CYGWIN_RUNTIME is defined,
    # use cygwin as the runtime environment.
    if [ "$LIB7_CYGWIN_RUNTIME" != "" ]; then
       OS=cygwin
    else
       OS=win32
    fi
    case `uname -m` in
       *86) ARCHITECTURE=intel32;;
       *) exit 1;;
    esac
    ;;
  *) exit 1;;
esac

echo "ARCHITECTURE=$ARCHITECTURE; OS=$OS"

exit 0


