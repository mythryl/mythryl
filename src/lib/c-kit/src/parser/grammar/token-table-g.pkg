	      else tokens::identifier (s, pos, end_position);
              fi;

	  #  to enter GCC-style 'underscore'-versions of certain keywords 
	  fun insaug (s, item)
	      =
	      {
		  fun item' (p as (pos, end_position))
		      =
		      case parse_control::underscore_keywords   
			  NULL => id_tok (s, pos, end_position);
