			       raise exception LEX_ERROR;};
		      esac;

		  ins ("__" + s, item');
		  ins ("__" + s + "__", item');
	      };

	  normaltokens =
	      [("auto", tokens::auto),
	       ("extern", tokens::extern),
	       ("register", tokens::register),
	       ("static", tokens::static),
	       ("unsigned", tokens::unsigned),
	       ("break", tokens::break),
	       ("case", tokens::case_t),
	       ("continue", tokens::continue),
	       ("default", tokens::default),
	       ("do", tokens::do_t),
	       ("else", tokens::else_t),
	       ("for", tokens::for_t),
	       ("goto", tokens::goto),
	       ("if", tokens::if_t),
	       ("enum", tokens::enum_t),
	       ("float", tokens::float),
	       ("double", tokens::double),
	       ("char", tokens::char),
	       ("int", tokens::int),
	       ("long", tokens::long),
	       ("short", tokens::short),
	       ("struct", tokens::struct),
	       ("union", tokens::union),
	       ("void", tokens::void),
	       ("sizeof", tokens::sizeof),
	       ("typedef", tokens::typedef),
	       ("return", tokens::return),
	       ("switch", tokens::switch),
	       ("while", tokens::while_t)];

