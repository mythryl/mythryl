        config = 
               { background => REF (MIX { red=>200, blue=>240, green=>240 } ),
                foreground => REF (BLACK),
                background_sel => REF (MIX { red=>300, blue=>150, green=>300 } ),
                foreground_sel => REF (BLACK),
