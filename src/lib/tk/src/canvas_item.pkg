		=
		{   inc (anocid_nr);
                    "anocid" + int::to_string *anocid_nr;
                };
											    my
	    anofrid_nr = REF (0);

	    fun new_fr_id ()
		=
		{   inc (anofrid_nr);
                    "cfr" + int::to_string *anofrid_nr;
                };

	end;

