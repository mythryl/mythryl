	  fun permissions x
	      =
	      let fun read x
		      =
		      if access (x, [MAY_READ]) then "Yes"
			       else "No"

		  fun write x
		      =
		      if access (x, [MAY_WRITE]) then "Yes"
				else "No"

		  fun exec x
		      =
		      if access (x, [MAY_EXECUTE]) then "Yes"
			       else "No"
	      in
		  "   Read: " + read x +
		  "        Write: " + write x +
		  "        Exec: " + exec x + "   \n"
		  except
		      NoPermission => "?"
	      end
