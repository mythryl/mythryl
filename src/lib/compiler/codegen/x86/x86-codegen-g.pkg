                    =
                    {   temp_mem
                            =
                            i::DISPLACE { base=>base(), disp=>i::IMMED 304, mem=>stack };

			{ instrs   =>  [i::move { mv_op=>i::MOVL, src, dst=>temp_mem } ],
			  temp_mem,
			  cleanup  =>  []
			};
		    };


