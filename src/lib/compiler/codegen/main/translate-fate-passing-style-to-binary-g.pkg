			    rawload (p::UINT (size as (8 | 16)), i, x, e, heap_ptr)
				=>
				def_i32 (x, zx32 (size, t::LOAD (size, i, r::memory)), e, heap_ptr);

			    rawload ((p::UINT size | p::INT size), _, _, _, _)
