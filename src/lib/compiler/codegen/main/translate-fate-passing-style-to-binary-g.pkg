				    (31, 8) =>
					 def_i32 (x, t::BITWISEAND (ity, regbind v, li 0x1ff), e, heap_ptr);

				    (32, 8) =>
					def_i32 (x, tag_unsigned (t::BITWISEAND (ity, regbind v, 
