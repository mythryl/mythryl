				    mem  = dataptr_region v;
				    a    = mark_ptr (t::LOAD (ity, regbind v, mem));
				    mem' = array_region mem;

				    def_i31 (x, tag_unsigned (t::LOAD (8, scale1 (a, i), mem')), e, heap_ptr);
