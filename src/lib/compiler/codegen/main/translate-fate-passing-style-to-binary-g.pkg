				   (n, m) => if (n == m)  copy_m (m, x, v, e, heap_ptr); 
					     else         error "gen: PURE: trunc";
                                             fi;
				esac;

			    gen (PURE (p::TRUNC_INF _, _, _, _, _), heap_ptr)
				=>
				error "gen: PURE: trunc_inf";

			    gen (PURE (p::CHUNKLENGTH, [v], x, _, e), heap_ptr)
