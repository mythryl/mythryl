		    pp.lit ("code_segments.bytecodes_to_regenerate_literals_vector is " + (int::to_string data_len) + " bytes long");	pp.newline();
		    pp.lit ("code_segments zero entrypoint is " + (int::to_string c0_entrypoint));	pp.newline();
