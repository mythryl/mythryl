		};
		pp.newline();	    pp.newline();	    pp.newline();	    pp.newline();

		pp.lit ("code segments vector zero hex dump: ");

		pp.box .{								pp.rulename "ucds2";
		    pp.newline();

		    loop 0
		    where
			fun loop i
			    =
			    if   (i < c0_bytes_len)

				 if   (i % 32 == 0)

				      address = sfprintf::sprintf' "%04x: " [ sfprintf::INT i ];

				      pp.newline();
				      pp.lit address;
				 fi;

