				translate_nextcode_op_to_treecode (ncf::JUMPTABLE { i => ncf::INT _, ... }, hap_offset)	
				    =>
				    error "JUMPTABLE";	# Jumptables keying on a constant should have been optimized out in   src/lib/compiler/back/top/improve-nextcode/clean-nextcode-g.pkg

				translate_nextcode_op_to_treecode (ncf::JUMPTABLE { i, nexts, ... }, hap_offset)
				     => 
				     {   label  =   lbl::make_anonymous_codelabel ();
					 labels =   map  (fn _ = lbl::make_anonymous_codelabel())  nexts;

					 tmp_r =   make_int_codetemp_info chi::i32_type;
					 tmp  =   tcf::CODETEMP_INFO (int_bitsize, tmp_r);

					 buf.put_op (tcf::LOAD_INT_REGISTER (int_bitsize, tmp_r, make_code_for_label_address (label, 0)));
					 buf.put_op (tcf::GOTO (tcf::ADD (pri::address_width, tmp, tcf::LOAD (ptr_bitsize, add_ix4 (tmp, i), 		# 64-bit issue: Need add_ix4 -> add_ix8 on 64-bit architectures.
									      rgn::readonly)), labels));
					 buf.put_pseudo_op (pb::DATA_READ_ONLY);
					 buf.put_pseudo_op (pb::EXT (cpo::JUMPTABLE { base=>label, targets=>labels } ));
					 buf.put_pseudo_op (pb::TEXT);

					 pl::apply
					     (fn (label, next) = put_private_label_and_do_next (label, next, hap_offset))
					     (labels, nexts);
				     };


				###############################
				# ncf::PURE:

				translate_nextcode_op_to_treecode
				    ( ncf::PURE   { op   =>  ncf::p::CONVERT_FLOAT { from=>ncf::p::INT 31, to=>ncf::p::FLOAT 64 },
						    args =>  [ arg ],
						    to_temp,
						    next,
						    ...
						  },
