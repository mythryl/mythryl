				###############################
				# ncf::GET_FIELD_I:					# NB: ncf::INT is untagged.

				translate_nextcode_op_to_treecode (ncf::GET_FIELD_I { i, record => ncf::INT k, to_temp, type,                       next }, hap_offset)   =>   funny_select (i, k,      to_temp, type, next, hap_offset);
