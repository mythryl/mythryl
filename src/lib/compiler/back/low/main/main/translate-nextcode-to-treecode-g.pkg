				    =>
				    defload_boxed (to_temp, add_ix4 (def_for_int_codetemp record, ncf::INT i), next, hap_offset);			# ncf::INT is untagged.	     # 64-bit issue: Need add_ix4 -> add_ix8 on 64-bit architectures.



				###############################
				# ncf::TAIL_CALL:

				translate_nextcode_op_to_treecode (ncf::TAIL_CALL { func => ncf::INT      k, args }, hap_offset) =>  update_heap_allocation_pointer  hap_offset;			# ncf::INT is untagged.
				translate_nextcode_op_to_treecode (ncf::TAIL_CALL { func => ncf::CODETEMP f, args }, hap_offset) =>  call_public_fn  (f, args, hap_offset);
				translate_nextcode_op_to_treecode (ncf::TAIL_CALL { func => ncf::LABEL    f, args }, hap_offset) =>  call_private_fn (f, args, hap_offset);



