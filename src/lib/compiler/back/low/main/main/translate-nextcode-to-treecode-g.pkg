			    also
			    fun call_public_fn (fun_id, args, hap_offset)
				= 
				{   ncftypes_for_args =   map  ncftype_of  args;					# "args" is where the argument values currently are.

				    formals										# "formals" is where callee expects to find the argument values.
					=
					cfa::convert_nextcode_public_fun_args_to_treecode
					  {
					    use_virtual_framepointer,
					    ncftype_for_fun => get_ncftype_for_codetemp  fun_id,
					    ncftypes_for_args
					  };

				    dest =  case formals								# 'link' ...?
						(tcf::INT_EXPRESSION dest ! _)
						    =>
						    dest;

						_   => error "call_public_fn: dest";
					    esac;


				    set_up_args_for_fn_call (formals, args);						# Copy argument values from where they are to where calle expects to find them.


				    if track_types_for_heapcleaner
					#
					buf.put_bblock_note
                                            (
						make_heapcleaner_liveinliveout_note
						  (
						    hr::heapcleaner_liveout.x_to_note, 
						    formals,
						    ncftypes_for_args
						  )
					    );
				    fi;

				    maybe_test_heap_allocation_limit  hap_offset;						# This is a no-op on Intel; on risc it introduces some pipelining by doing the compare early.

				    buf.put_op (tcf::GOTO (dest, []));							# [] is the might-branch-to labels list.

				    buf.put_fn_liveout_info (formals @ global_registers);				# Remember which registers are 'live' at the GOTO (== end of bblock).
				}


