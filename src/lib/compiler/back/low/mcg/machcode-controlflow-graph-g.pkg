	    package sfp =  sfprintf;									# sfprintf	is from   src/lib/src/sfprintf.pkg
	    #
	    fun show_edge_info  (EDGE_INFO { kind, execution_frequency, notes, ... } )
		=
		{   kind =  case kind
				#
				JUMP	    =>  "jump";
				FALLSTHRU   =>  "fallsthru";
				BRANCH b    =>   bool::to_string b;
				SWITCH i    =>   int::to_string i;
				ENTRY	    =>  "entry";
				EXIT	    =>  "exit";
				FLOWSTO	    =>  "flowsto";
			    esac;

		    sfp::sprintf'  "%s[%f]"  [sfp::STRING kind, sfp::FLOAT *execution_frequency];
		};
	    #
	    fun get_string f x
		=
		{   buffer = sos::make_stream_buf();
		    sss    = sos::open_string_out buffer;

		    ast::with_stream sss f x; 

		    sos::get_string buffer;
		};
	    #
	    fun show_bblock  notes  bblock
		=
		{   text = get_string  (emit_bblock_as_assembly_code  notes)  bblock;

		    fold_right
			fn (x, "") => x;
			   (x,  y) => x + " " + y;
			end
			""
			(string::tokens
			     fn ' ' => TRUE;
				  _ => FALSE;
			     end
			     text
			);
		};
	    #
	    fun dump_node (out_s, mcg as odg::DIGRAPH g)
		=
		print_node
		where
		    fun print str
			=
			file::write (out_s, str);
		    #
		    fun print_list []  =>  ();
			print_list [i] =>  print i;

			print_list (h ! t)
			    =>
			    {   print (h + ", ");
				print_list t;
			    };
		    end;

		    (ast::with_stream out_s  ae::make_stream  [])
			->
			{ emit_op, emit_private_label, emit_bblock_note, ... };


		    #
		    fun show_freq (REF w)
			=
			sfp::sprintf' "[%f]" [sfp::FLOAT w];
		    #
		    fun show_edge' (blknum, e)
			= 
			sfp::sprintf' "%d:%s" [sfp::INT blknum, sfp::STRING (show_edge_info e)];
		    #
		    fun show_succ (_, x, e) = show_edge' (x, e);
		    fun show_pred (x, _, e) = show_edge' (x, e); 
		    #
		    fun show_succs b
			=
			{   print "\tsucc:     "; 
			    print_list (map show_succ (g.out_edges b)); 
			    print "\n";
			};
		    #
		    fun show_preds b
			=
			{   print "\tpred:     "; 
			    print_list (map show_pred (g.in_edges b)); 
			    print "\n";
			};
		    #
		    fun print_node (_, BBLOCK { kind=>START, id, execution_frequency, ... } )
			    =>
			    {   print (sfp::sprintf' "ENTRY %d %s\n" [sfp::INT id, sfp::STRING (show_freq execution_frequency)]);
				show_succs id;
			    };

			print_node (_, BBLOCK { kind=>STOP, id, execution_frequency, ... } )
			    =>
			    {   print (sfp::sprintf' "EXIT %d %s\n" [sfp::INT id, sfp::STRING (show_freq execution_frequency)]);
				show_preds id;
			    };

			print_node (_, BBLOCK { id, alignment_pseudo_op, execution_frequency, ops, notes, labels, ... } )
			    =>
			    {   print (sfp::sprintf' "BBLOCK %d %s\n" [sfp::INT id, sfp::STRING (show_freq execution_frequency)]);

				case *alignment_pseudo_op
				    #
				    THE p =>  print (pop::pseudo_op_to_string p + "\n");
				    NULL  =>  ();
				esac;

				apply  emit_bblock_note     *notes;
				apply  emit_private_label  *labels;

				show_succs id;
				show_preds id;

				apply  emit_op  (reverse *ops);
			    };
		    end;
		end;
	    #
	    fun dump (out_s, title, mcg as odg::DIGRAPH g)
		=
		{   fun print stream
			=
			file::write (out_s, stream);

		    global_graph_notes =  *(get_global_graph_notes  mcg);

		    my  { emit_bblock_note, ... }
			= 
			ast::with_stream
			    out_s
			    ae::make_stream
			    global_graph_notes;
		    #
		    fun print_data ()
			=
			{   g.graph_info ->  GRAPH_INFO { dataseg_pseudo_ops, ... };

			    list::apply (print o pop::pseudo_op_to_string)
					(reverse *dataseg_pseudo_ops);
			};

		    print (sfp::sprintf' "[ %s ]\n" [sfp::STRING title]);

		    list::apply  emit_bblock_note  global_graph_notes;

		    #  print_node entry; 

		    ast::with_stream  out_s  g.forall_nodes  (dump_node  (out_s,  mcg));

		    #  print_node exit; 

		    ast::with_stream  out_s  print_data  ();

		    file::flush  out_s;
		};

