	prettyprint_uniqkind:		pp::Prettyprint_Mill -> hut::Uniqkind   -> Void;
	prettyprint_uniqtype:		pp::Prettyprint_Mill -> hut::Uniqtype   -> Void;
	prettyprint_uniqtypoid:		pp::Prettyprint_Mill -> hut::Uniqtypoid -> Void;

	# Adjusting a hut::Uniqtypoid or hut::Uniqtype
