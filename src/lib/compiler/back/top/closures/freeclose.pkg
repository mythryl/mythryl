	fun freemap_close fe
            =
            {   ############################################################################
		#  Modify the callers_info for each fundef, new callers_info includes,
		#
		#       (1) KNOWN_CONT       all-callers-known fate function
		#       (2) KNOWN_TAIL       all-callers-known tail-recursive function
		#       (3) KNOWN            general all-callers-known function
		#       (4) CONT             general fate function
		#       (5) ESCAPE           general may-have-unknown-callers user function
		#       (6) KNOWN_REC        mutually recursive all-callers-known function
		#
                ############################################################################

		escapes  = intset::new();
		escapes_p = intset::mem escapes;

		fun escapes_m (fcf::VAR v)   =>   intset::add escapes v;
		    escapes_m _         =>   ();
                end;

		users    =   intset::new();
		users_p  =   intset::mem users;
		users_m  =   intset::add users;

		known    =   intset::new();
		known_p  =   intset::mem known;
		known_m  =   intset::add known;

		fun known_k k   =   (k != fcf::FATE)   and   (k != fcf::MAY_HAVE_UNKNOWN_CALLERS            );
		fun frmsz_k k   =   (k == fcf::FATE)   or    (k == fcf::ALL_CALLERS_KNOWN_AND_TAIL_RECURSIVE);

		contset =   intset::new();
		cont_p  =   intset::mem contset;
		cont_m  =   intset::add contset;

		fun cont_k  k   =   (k == fcf::FATE)   or   (k == fcf::ALL_CALLERS_KNOWN_AND_FATE);		#  Fate funs ?          
		fun econt_k k   =   (k == fcf::FATE);             		            		 	#  Escaping fate funs ? 

		fun fixkind (fe as (fcf::FATE, f, vl, cl, ce))
			=> 
			if   (escapes_p f)
			      cont_m f;   fe;
			else  known_m f;  cont_m f;  (fcf::ALL_CALLERS_KNOWN_AND_FATE, f, vl, cl, ce);
                        fi;

		    fixkind (fe as (fk, f, vl, cl as (cntt ! _), ce))
			=> 
			if (escapes_p f)   users_m  f;  (fcf::MAY_HAVE_UNKNOWN_CALLERS,        f, vl, cl, ce);
			else               known_m  f;  (fcf::ALL_CALLERS_KNOWN_AND_RECURSIVE, f, vl, cl, ce);
                        fi;

		    fixkind (fe as (fk, f, vl, cl, ce))
			=> 
			if (escapes_p f)
			    #			    
			    vp f;
			    say " ***** \n";
			    error "escaping-fun has zero fate, freeclose.pkg";
			else
			    known_m f;
			    (fcf::ALL_CALLERS_KNOWN_AND_TAIL_RECURSIVE, f, vl, cl, ce);
			fi;
                end;

		fun procfix (fk, f, vl, cl, ce)
                    =
                    (fk, f, vl, cl, proc ce)

		also
                fun proc  ce
                    =
		    case ce 
			#                      
		        fcf::DEFINE_FUNS { funs, fate }
			    =>
			    {   (proc fate) ->   fate;

				(map fixkind (map procfix funs))
				    ->
				    funs;

				# Due to possible eta-splits of fate functions, 
				# since it's always that fcf::FATE funs call KNOWN_FATE funs, 
				# we split them into two DEFINE_FUNSes, so that each DEFINE_FUNS only 
				# contains at most one fate definition.


				(partition (econt_k o #1) funs)
				    ->
				    (funs1, funs2);

				case (funs1, funs2) 
				    #
				    ( [],   _)   =>   fcf::DEFINE_FUNS { funs => funs2, fate };
				    (  _,  [])   =>   fcf::DEFINE_FUNS { funs => funs1, fate };
				    _            =>   fcf::DEFINE_FUNS { funs => funs2, fate => fcf::DEFINE_FUNS { funs => funs1, fate } };
                                esac;
			    };

		        fcf::TAIL_CALL { args, ... }
			    =>
			    {   apply  escapes_m  args;
				ce;
			    };

		        fcf::JUMPTABLE { i, xvar, fates }
			    =>
			    fcf::JUMPTABLE { i, xvar, fates => map proc fates };

		        fcf::DEFINE_RECORD { kind, fields, name, fate }
			    => 
			    {   apply (escapes_m o #1) fields;
				fcf::DEFINE_RECORD { kind, fields, name,     fate => proc fate };
			    };

		        fcf::GET_FIELD_I        { i, record, name, type,   fate              }
			    => fcf::GET_FIELD_I { i, record, name, type,   fate => proc fate };

		        fcf::GET_ADDRESS_OF_FIELD_I        { i, record, name,       fate              }
			    => fcf::GET_ADDRESS_OF_FIELD_I { i, record, name,       fate => proc fate };

		        fcf::FETCH_FROM_RAM { op, args, name, type, fate }
			    => 
			    {   apply  escapes_m  args;
				#
				fcf::FETCH_FROM_RAM { op, args, name, type, fate => proc fate };
			    };

		        fcf::MATH { op, args, name, type, fate }
			    => 
			    {   apply escapes_m  args;
				#
