		fun kuc x
                    =
                    (cont_p  x)   or
                    (known_p x)   or
                    (users_p x);

		fun make_graph f
                    =
                    {   fun comb  ((xe, xf), (ye, yf))   =   (is::union (xe, ye), xf @ yf);
			fun combe ((xe, xf),        e)   =   (is::union (xe, e),  xf     );
			fun combf ((xe, xf),        f)   =   (xe, xf @ f);

			fun add_kuc (s, v)
                            =
                            if   (kuc v   )   is::add (s, v);
                                         else   s;   fi;

			fun vl2s_kuc l
                            =
			    loop (l, is::empty)
                            where
                                fun loop (       [], s) =>   s;
				    loop (fcf::VAR v ! r, s) =>   loop (r, add_kuc (s, v));
				    loop (    _ ! r, s) =>   loop (r, s);
                                end;
			    end;

			fun collect (fcf::JUMPTABLE { fates, ... })
				=>
				fold_left
				    (   fn (x, a)
					   =
					   comb (collect x, a)
				    )
				    (is::empty, [])
				    fates;

			   collect (fcf::STORE_TO_RAM { op => fcf::p::SET_EXCEPTION_HANDLER, args, fate })
                               =>
                               combe (collect fate, vl2s_kuc args);

			   collect ( fcf::DEFINE_RECORD		    { fate, ... }
				   | fcf::GET_FIELD_I		    { fate, ... }
				   | fcf::GET_ADDRESS_OF_FIELD_I    { fate, ... }
				   | fcf::STORE_TO_RAM		    { fate, ... }
				   | fcf::FETCH_FROM_RAM	    { fate, ... }
				   | fcf::MATH			    { fate, ... }
				   | fcf::PURE			    { fate, ... }
				   | fcf::RAW_C_CALL		    { fate, ... }
                                   )   =>
                                       collect fate;

			   collect (fcf::IF_THEN_ELSE { thenfate, elsefate, ... })
                               =>
                               comb ( collect thenfate,
                                      collect elsefate
                                    );

			   collect (fcf::TAIL_CALL { func, args })
                               =>
                               (vl2s_kuc (func ! args), []);

			   collect (fcf::DEFINE_FUNS { funs, fate })
                               =>
                               combf (collect fate, funs);
                        end;

			fun dofun ((_, f, _, _, body), (m, all))
                            =
                            {   my (es, fl) =   collect body;
				m'          =   im::set (m, f, is::vals_list es);
				all'        =   is::add (all, f);
			    
				fold_left
                                    dofun
                                    (m', all')
                                    fl;
			    };

			my (follow_map, allset)
                            =
                            dofun (f, (im::empty, is::empty));

			rootedges   =   is::vals_list allset;

			fun follow v
                            =
                            the (im::get (follow_map, v));
		    
			{ roots  => rootedges,
                          follow
                        };
		    };

		fun ass_num (scc::SIMPLE v, (i, nm))
			=>
			( i + 1,
			  im::set (nm, v, i)
			);

		    ass_num (scc::RECURSIVE vl, (i, nm))
			=>
			(   i + 1,

			    fold_left
				(fn (v, nm) =  im::set (nm, v, i))
				nm
				vl
			);
                end;

		number_map
                    =
                    #2 (fold_left ass_num (0, im::empty) (scc::topological_order' (make_graph fe')));

		fun sccnum x
                    =
                    the (im::get (number_map, x));

