			    AND { namings, subtrees,   constraints => add_a_constraint((k, t), THE pattern, rule, constraints) };
			else
			    bug "concrete constructor application can't match record";
                        fi;

		    merge_and_or _
			=>
			bug "bad pattern merge";
                end 

