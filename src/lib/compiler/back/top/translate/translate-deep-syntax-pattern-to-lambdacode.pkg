			=>
			if (abstract k)

			    LEAF { namings => NIL, 
				   constraints => [((k, t), [rule], THE (make_and_or (pattern, rule)))]
                                 };
			else
			    CASE { namings => NIL, constraints => NIL, an_api => signature_of_constructor k,
				   cases => [(DATAPCON (k, t), [rule], [make_and_or (pattern, rule)])]
