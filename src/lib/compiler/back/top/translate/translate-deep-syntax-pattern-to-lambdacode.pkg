	#
	fun all_conses (hds, tls)
            = 
	    list::cat
                (   map (fn hd =   (map   (fn tl = hd ! tl)   tls))
                        hds
                );

	#
	fun or_expand (ds::OR_PATTERN (pattern1, pattern2))
		=> 
		(or_expand pattern1)
                @
                (or_expand pattern2); 

	    or_expand (pattern as ds::RECORD_PATTERN { fields, ... } )
		=>
		map (make_recordpat pattern)
                    (fold_right all_conses [NIL] (map (or_expand o #2) fields));

	    or_expand (ds::VECTOR_PATTERN (pats, t))
		=>
		map (fn p = ds::VECTOR_PATTERN (p, t))
                    (fold_right all_conses [NIL] (map or_expand pats));

	    or_expand (ds::APPLY_PATTERN (k, t, pattern))
		=>
		map (fn pattern = ds::APPLY_PATTERN (k, t, pattern))
                    (or_expand pattern);

	    or_expand (ds::TYPE_CONSTRAINT_PATTERN (pattern, _))
		=>
		or_expand pattern;

	    or_expand (ds::AS_PATTERN (ds::TYPE_CONSTRAINT_PATTERN (lpat, _), bpat))
		=>
		or_expand (ds::AS_PATTERN (lpat, bpat));

	    or_expand (ds::AS_PATTERN (lpat, bpat))
		=>
		map (fn pattern = ds::AS_PATTERN (lpat, pattern))
                    (or_expand bpat);

	    or_expand pattern
		=> 
		[pattern];
        end;

