	fun to_dcon_lty  to_lambda_type  type
            =
	    case type 
		#	      
		ty::TYPE_SCHEME_TYPE
		   { type_scheme_arg_eq_properties => an_api,
		     type_scheme => ty::TYPE_SCHEME { arity, body }
		   }
		   =>
		   if (tt::is_arrow_type body)
			to_lambda_type type;
		   else to_lambda_type (   ty::TYPE_SCHEME_TYPE {
				      type_scheme_arg_eq_properties => an_api, 
				      type_scheme                         => ty::TYPE_SCHEME {
										 arity,
										 body  => tt::(-->) (tt::void_type, body)
									     }
				  }
			      );
		   fi;

		_   => if (tt::is_arrow_type type)
			    to_lambda_type type;
		       else to_lambda_type (tt::(-->) (tt::void_type, type));
		       fi;
            esac;


