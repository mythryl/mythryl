			       primreal (level, args);

			   MATH (args as (p::round _, _, _, _, _))
			       =>
			       primreal (level, args);

			   MATH(_, vl, w, _, e)
			       =>
			       {   noteother w;
				   prim (level, vl, e);
			       };

			   PURE (p::pure_arith { kind=>p::FLOAT 64, ... },[v], w, _, e)
			       => 
			       {   notereal w;
				   incsave (v, 1);
				   4+(pass1 level e);
			       };

			   PURE (p::real { to=>p::FLOAT 64, ... }, vl, w, _, e)
			       =>
			       {   notereal w;
				   prim (level, vl, e);
			       };

			   PURE (_, vl, w, _, e)
			       =>
			       {   noteother w;
				   prim (level, vl, e);
			       };
		       end;
		   end;


