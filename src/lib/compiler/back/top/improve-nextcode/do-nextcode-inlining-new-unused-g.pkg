				    sl = map savesofar vl;

				    branches = pass1 level e1 + pass1 level e2;

				    zl = map savesofar vl;
				    overhead = length vl;

				    potential = overhead + branches div 2;

				    savings = case nonconst   
						  1 => potential;
						  2 => potential div 4;
						  _ => 0;
					      esac;

				    fun app3 f
					=
					loop
					where
					    fun loop (a . b, c . d, e . r)
						    =>
						    {   f (a, c, e);
							loop (b, d, r);
						    };

						loop _ => ();
					    end;
					end;

				    app3
					(fn (v, s, z)=  setsave (v, s + savings + (z-s) div 2))
					(vl, sl, zl);

				    overhead + branches;
				};

