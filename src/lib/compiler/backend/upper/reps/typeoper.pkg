					  LET([w], e, 
					    cond (test1, hh1 (fn_g (argt1, body1 sv)),
					      cond (test2, hh2 (fn_g (argt2, body2 sv)),
						   hh3 (RET [sv]))));

				      fun header (xe as RET [sv])
                                              =>
                                              hdr0 sv;

					  header xe
                                              =>
                                              {   z = make_var();
						  LET([z], xe, hdr0 (VAR z));
					      };
				      end;

				      THE header;
				  };
                        esac;
		  };
		_ => NULL;
	    esac;

