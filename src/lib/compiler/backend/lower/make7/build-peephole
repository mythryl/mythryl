#!/bin/sh
#
# Install-time build script for peephole.make6.
#
# We will normally be run as a result of a toplevel "make rest".
#
# Our main result is the freezefile src/lib/compiler/backend/lower/make7/peephole.make6.frozen.

bin/mythryld <<EOF
    make7::freeze "src/lib/compiler/backend/lower/make7/peephole.make6";
EOF

if   [ -f "src/lib/compiler/backend/lower/make7/peephole.make6.frozen" ]
then
     echo "          .../lower/make7/build-peephole:   Successfully created src/lib/compiler/backend/lower/make7/peephole.make6.frozen:"
     echo "          .../lower/make7/build-peephole:   `ls -l src/lib/compiler/backend/lower/make7/peephole.make6.frozen`"
else
     echo "          .../lower/make7/build-peephole:   Failed to create src/lib/compiler/backend/lower/make7/peephole.make6.frozen"
     exit 1
fi

exit 0;
