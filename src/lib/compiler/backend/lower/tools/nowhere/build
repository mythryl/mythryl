#!/bin/sh
#
# build script for nowhere
#
# We will normally be run as a result of a toplevel "make init".
#
# Our main result is the executable bin/nowhere.
#
# options:
#   -o image		-- specify the name of the heap image, "nowhere"
#			   is the default.

CMD=$0

NOWHERE="nowhere"
HEAP_IMAGE=""
HERE=`pwd`
cd ../../../../../../..
SEVEN_UP=`pwd`
cd $HERE
BIN=${INSTALL_DIR:-$SEVEN_UP}/bin
MAKE7=$BIN/build-an-executable-mythryl-heap-image

echo
echo '---------------------------------------------------------'
echo "  lib/compiler/backend/lower/tools/nowhere/build:   Starting."

#
# Process command-line options:
while [ "$#" != "0" ] ; do
    arg=$1
    shift
    case $arg in
	-o)
	    if [ "$#" = "0" ]; then
		echo "  lib/compiler/backend/lower/tools/nowhere/build:   Must supply image name for -o option"
		exit 1
	    fi
	    HEAP_IMAGE=$1; shift
	    ;;
	*)
	    echo "  lib/compiler/backend/lower/tools/nowhere/build:   Invalid argument: $arg"
	    exit 1
	    ;;
    esac
done

if [ "$HEAP_IMAGE" = "" ]; then
    HEAP_IMAGE="$NOWHERE"
fi

echo "  lib/compiler/backend/lower/tools/nowhere/build:   Doing:                  $MAKE7 nowhere.make6 no_where::main $HEAP_IMAGE"
$MAKE7 nowhere.make6 no_where::main $HEAP_IMAGE



if [ -f "$HEAP_IMAGE" ]; then

    echo "  lib/compiler/backend/lower/tools/nowhere/build:   $HEAP_IMAGE created."

    if [ -f "$BIN/$NOWHERE" ]; then
        echo "  lib/compiler/backend/lower/tools/nowhere/build:   Removing $BIN/$NOWHERE"
        rm $BIN/$NOWHERE
    fi

    echo "  lib/compiler/backend/lower/tools/nowhere/build:   Installing $HEAP_IMAGE as $BIN/$NOWHERE"
    cp "$HEAP_IMAGE" "$BIN/$NOWHERE"
    chmod +x "$BIN/$NOWHERE"
    rm "$HEAP_IMAGE"

else
    echo "  lib/compiler/backend/lower/tools/nowhere/build:   $HEAP_IMAGE not created, aborting."
    exit 1
fi



echo "  lib/compiler/backend/lower/tools/nowhere/build:   Done."
echo
echo
echo


exit 0