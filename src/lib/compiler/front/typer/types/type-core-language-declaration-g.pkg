			    typoid2, name2,			# typoid2: tdt::Typoid,   name2:  String

			    message => m,
			    source_code_region,

			    unparse_phrase,			# prettyprint::String -> (X, Int) -> Void
			    phrase_name,			# String
			    phrase,				# X; X here and above is one of deep syntax Case_Pattern, Expression, ...
