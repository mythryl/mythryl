									  namepath    =>  ip::INVERSE_PATH [sy::make_type_symbol name],
									  arity	      =>  0,
									  is_eqtype =>  REF tdt::e::NO,
									  kind        =>  tdt::ABSTRACT  ctt::bool_type,
