	fun smash f l
            = 
            fold_backward h (NIL, NIL, NIL) l
            where
	        fun h (a, (pl, oldl, newl))
                    =
		    {   my (p, old, new) = f a;

                        (   p ! pl,
                            old @ oldl,
                            new @ newl
                        );
		    };
	    end;

