	fun process_options
	    ( options: List(Option),
	      #
	      {	body_color,
		body_color_with_mousefocus,
		body_color_when_on,
		body_color_when_on_with_mousefocus,
		#
		widget_id,
		#
		relief,
		margin,
		thick,
		no_box,
		#
		text,
		#
		fonts,
