	fun default_mouse_transit_fn (MOUSE_TRANSIT_FN_ARG a)
	    =
	    {   fun flip_blink (wa: gt::Wakeup_Arg)
		    =
		    {   a.cursor_on :=  not *a.cursor_on;
			#
			a.needs_redraw_gadget_request ();
		    };

		case a.transit
		    #
		    gt::CAME => {   a.needs_redraw_gadget_request ();						# So button will lighten when mouse enters it.
				    #
				    a.widget_to_guiboss.g.wake_me
				      {
					id      =>  a.id,
					options =>  [ gt::EVERY_N_FRAMES (THE (40, flip_blink)) ]
				      };
				};
		    gt::LEFT => {   a.needs_redraw_gadget_request ();						# So button will revert  when mosue leaves it.
				    #
				    a.widget_to_guiboss.g.wake_me
				      {
					id	=>  a.id,
					options =>  [ gt::EVERY_N_FRAMES (NULL                ) ]
				      };
				};
		    _	 => ();
		esac;
	    };


	fun default_key_event_fn (KEY_EVENT_FN_ARG a)
	    =
	    {   key_event			=  a.key_event;
		char				=  a.char;
		string				=  a.string;
		state				=  a.state;
		needs_redraw_gadget_request	=  a.needs_redraw_gadget_request;
		notify_string_outs		=  a.notify_string_outs;

		if (key_event == gt::KEY_PRESS)								# Currently we ignore KEY_RELEASE.
		    #
		    if (char::is_print char)
			#
			state := *state + string;
			needs_redraw_gadget_request ();
		    else
			if (char == chr::ctrl_h
			or  char == chr::del)
			    #
			    if (string::length *state > 0)
				#
				state := string::substring (*state, 0, string::length *state - 1);
				needs_redraw_gadget_request ();
			    fi;

			elif (char == chr::ctrl_u)
			    #
			    if (string::length *state > 0)
				#
				state := "";
				needs_redraw_gadget_request ();
			    fi;

			elif (char == chr::return)
			    #
			    notify_string_outs ();

			elif (char == chr::nul)
			    #
			    case string
				#
				("<Clear>" | "<Home>")
				    =>
				    if (string::length *state > 0)
					#
					state := "";
					needs_redraw_gadget_request ();
				    fi;

				"<Left>"
				    =>
				    if (string::length *state > 0)
					#
					state := string::substring (*state, 0, string::length *state - 1);
					needs_redraw_gadget_request ();
				    fi;

				_   =>  ();
			    esac;
			fi;
		    fi;
		fi;	
	    };



