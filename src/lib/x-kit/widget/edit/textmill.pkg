			fun tell_watcher
			      (
				inport:		 mt::Inport,											# Unique id identifying this watcher.
				watcher:	(mt::Outport, mt::Textmill_Statechange) -> Void							# 
			      )
			    =
			    {   outport  =  r.textmill_statechange__outport;
				#
				watcher     (outport, statechange);

