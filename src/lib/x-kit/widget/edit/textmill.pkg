		fun line_range (textlines: mt::Textlines,  firstline: Int,  lastline: Int):  List(String)
		    =
		    lines (lastline, [])
		    where
			fun lines (i: Int, result: List(String))
			    =
			    if (i < firstline)    result;
			    else
				result =    case (nl::find (textlines, i))
						#
						THE line => mt::visible_line(line) ! result;
						NULL	 =>                          result;
					    esac;

				lines  (i - 1,  result);
			    fi;
		    end;


