			    #
			    textpane_to_textedit:		Ref( Null_Or( p2e::Textpane_To_Textedit   ) ),
			    #
			    screenlines:			Ref( im::Map( Screenline_Info		  ) )
			  };

			case (  *editboss_to_textpane,
				*textedit_to_textpane,
			      *screenline_to_textpane,
			      *textpane_to_textedit)
			    #
			    (NULL, NULL, NULL, NULL)
				=>
				if (im::is_empty *screenlines)
				    #	
				    textedit_info =  get_or_make_textedit_info { me, textedit_id };
			
				    textedit_info.textpanes
					:=
					im::drop  (*textedit_info.textpanes,  iuw::id_to_int textpane_id);
				fi;

			    _ => ();
			esac;
		    };


		fun note_screenline
		      (
			editboss_to_screenline:		b2l::Editboss_To_Screenline,
			textpane_to_screenline:		p2l::Textpane_To_Screenline
		      )
		    =
		    put_in_mailqueue  (editboss_q,
			#
			\\ ({ id, me, ... }: Runstate)
			    =
			    {   r = textpane_to_screenline;								# For brevity.
				#
				textedit_id   = r.textedit_id;
				textpane_id   = r.textpane_id;
				screenline_id = r.screenline_id;

				textpane_info
				    =
				    get_or_make_textpane_info { me, textpane_id, textedit_id };

				screenline_info
				    =
				    { editboss_to_screenline, textpane_to_screenline };

				textpane_info.screenlines
				    :=
				    im::set (  *textpane_info.screenlines,
						iuw::id_to_int screenline_id,
						screenline_info
					    );


				case (*textpane_info.screenline_to_textpane)
				    #
				    THE screenline_to_textpane
					=>
					editboss_to_screenline.note__screenline_to_textpane  screenline_to_textpane;
				    #
				    NULL => ();										# Haven't seen the textpane.pkg instance yet, so we'll do above in note_textpane.
				esac;


				case (*textpane_info.editboss_to_textpane)
				    #
				    THE editboss_to_textpane
					=>
					editboss_to_textpane.note__textpane_to_screenline  textpane_to_screenline;
				    #
				    NULL => ();										# Haven't seen the textpane.pkg instance yet, so we'll do above in note_textpane.
				esac;
			    }
		    );

