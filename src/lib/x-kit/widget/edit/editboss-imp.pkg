		fun uniquify_buffername											# Convert "foo" into "foo<1>" or "foo<2>" or such in order to avoid conflicting with any existing buffername.
		      (
			me:		Editboss_State,
			buffername:	String
		      )
		    :			String
		    =
		    case (sm::get (*me.textbuffers_by_name, buffername))
			#
			NULL => buffername;										# Buffername is already unique.

			THE _ =>
			    uniquify_buffername' 0
			    where
				fun uniquify_buffername' (i: Int)
				    =
				    {   buffername' = sprintf "%s<%d>" buffername i;
					#
					case (sm::get (*me.textbuffers_by_name, buffername'))
					    #
					    NULL  =>  buffername';							# Modified buffername is now unique.
					    THE _ =>  uniquify_buffername' (i + 1);					# Modified buffername already exists, try one number higher.
					esac;
				    };
			    end;
		    esac;



		fun get_textbuffer   (buffername: String)
		    =
		    {   reply_oneshot =  make_oneshot_maildrop():  Oneshot_Maildrop( Null_Or( mj::Textpane_To_Textbuffer ) );
			#
			put_in_mailqueue  (editboss_q,
			    #
			    \\ ({ id, me, ... }: Runstate)
				=
				case (sm::get (*me.textbuffers_by_name, buffername))
				    #
				    THE textbuffer_info =>  put_in_oneshot (reply_oneshot, THE textbuffer_info.textpane_to_textbuffer);
				    NULL 		=>  put_in_oneshot (reply_oneshot, NULL);
				esac
			);

			get_from_oneshot  reply_oneshot;
		    };

		fun get_or_make_textbuffer
		      (
			textbuffer_arg
			as
			{ buffername:		String,
			  textbuffer_options:	List( mj::Textbuffer_Option )
			}:			mj::Textbuffer_Arg
		      )
		    =
		    {   reply_oneshot =  make_oneshot_maildrop():  Oneshot_Maildrop( mj::Textpane_To_Textbuffer );
			#
			put_in_mailqueue  (editboss_q,
			    #
			    \\ ({ id, me, ... }: Runstate)
				=
				case (sm::get (*me.textbuffers_by_name, buffername))
				    #
				    THE textbuffer_info
					=> 
					put_in_oneshot (reply_oneshot, textbuffer_info.textpane_to_textbuffer);
				    #
				    NULL =>
					{   egg =  tbi::make_textbuffer_egg  textbuffer_arg;
					    #
					    (egg ())
						->
						( textbuffer_exports:	tbi::Exports,
						  egg':		       (tbi::Imports, Run_Gun, End_Gun) -> Void
						);

					    textbuffer_imports
					      =
					      { };

					    (make_run_gun ()) ->   { run_gun', fire_run_gun };
					    (make_end_gun ()) ->   { end_gun', fire_end_gun };

					    egg' (textbuffer_imports, run_gun', end_gun');

					    fire_run_gun ();

					    textbuffer_exports
						->
						{ textpane_to_textbuffer as mj::TEXTPANE_TO_TEXTBUFFER t2t };

					    textbuffer_info = { id         =>	t2t.id,
								buffername =>	REF buffername,
								filename   =>	REF NULL,
								#
								textpane_to_textbuffer,
								end_gun'
							      };

					    me.textbuffers_by_name := sm::set (*me.textbuffers_by_name, buffername,                    textbuffer_info);
					    me.textbuffers_by_id   := im::set (*me.textbuffers_by_id,   id_to_int textbuffer_info.id,  textbuffer_info);

					    t2t.note_statewatcher (id, note_textbuffer_statechange);

					    put_in_oneshot (reply_oneshot, textpane_to_textbuffer);
					};
				esac
			);

			get_from_oneshot  reply_oneshot;
		    };

		fun get_or_make_filebuffer
		      {
			dirname:		String,

			textbuffer_arg
			as
			{ buffername:		String,
			  textbuffer_options:	List( mj::Textbuffer_Option )
			}:			mj::Textbuffer_Arg
		      }
		    =
		    {   reply_oneshot =  make_oneshot_maildrop():  Oneshot_Maildrop( mj::Textpane_To_Textbuffer );
			#
			put_in_mailqueue  (editboss_q,
			    #
			    \\ ({ id, me, ... }: Runstate)
				=
				{   buffername' = uniquify_buffername (me, buffername);
				    #
				    textbuffer_arg = { buffername => buffername', textbuffer_options };

				    egg =  tbi::make_textbuffer_egg  textbuffer_arg;
				    #
				    (egg ())
					->
					( textbuffer_exports:	tbi::Exports,
					  egg':		       (tbi::Imports, Run_Gun, End_Gun) -> Void
					);

				    textbuffer_imports
				      =
				      { };

				    (make_run_gun ()) ->   { run_gun', fire_run_gun };
				    (make_end_gun ()) ->   { end_gun', fire_end_gun };

				    egg' (textbuffer_imports, run_gun', end_gun');

				    fire_run_gun ();

				    textbuffer_exports -> { textpane_to_textbuffer as mj::TEXTPANE_TO_TEXTBUFFER t2t };

				    filename = dirname + "/" + buffername;

				    textbuffer_info = { id         =>	t2t.id,
							buffername =>	REF buffername',
							filename   =>	REF (THE filename),
							#
							textpane_to_textbuffer,
							end_gun'
						      };

				    me.textbuffers_by_filename	:= sm::set (*me.textbuffers_by_filename, filename,			textbuffer_info);
				    me.textbuffers_by_name	:= sm::set (*me.textbuffers_by_name,     buffername,			textbuffer_info);
				    me.textbuffers_by_id	:= im::set (*me.textbuffers_by_id,       id_to_int textbuffer_info.id,	textbuffer_info);

				    t2t.note_statewatcher (id, note_textbuffer_statechange);

				    put_in_oneshot (reply_oneshot, textpane_to_textbuffer);

				}
			);

			get_from_oneshot  reply_oneshot;
		    };
	    end;

