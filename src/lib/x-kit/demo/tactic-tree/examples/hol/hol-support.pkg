fun goal_to_string (hl, c) = 
    let pp  = pp::pp_to_string pp_term
    in fold (\\ (s, r) => if r == "" then s else s ^ "\n" ^ r)
	    ((map pp hl) @ ["|- " ^ (pp c)] )
            ""
    end

