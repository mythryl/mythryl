#!/bin/sh
#
# Install-time build script for calc-app.make6.
#
# We will normally be run as a result of a toplevel "make rest".
#
# Our main result is the freezefile src/lib/x-kit/tut/calculator/calculator-app.make6.frozen.

bin/mythryld <<EOF
    make7::freeze "src/lib/x-kit/tut/calculator/calculator-app.make6";
EOF

if   [ -f "src/lib/x-kit/tut/calculator/calculator-app.make6.frozen" ]
then
     echo " x-kit/tut/calculator/build-calc-app:   Successfully created: src/lib/x-kit/tut/calculator/calculator-app.make6.frozen"
     echo " x-kit/tut/calculator/build-calc-app:   `ls -l src/lib/x-kit/tut/calculator/calculator-app.make6.frozen`"
else
     echo " x-kit/tut/calculator/build-calc-app:   Failed to create src/lib/x-kit/tut/calculator/calculator-app.make6.frozen"
     exit 1
fi

exit 0;
