			  [
			    low::SPACER { min_size=>0,  best_size=>30, max_size=>NULL },
			    low::WIDGET (pb::as_widget bttn),
			    low::SPACER { min_size=>0,  best_size=>30, max_size=>NULL }
			  ]
			);

		topwindow = top::topwindow
			    (root, view,[])
			    (low::as_widget  layout);

		fun loop ()
		    =
		    case (fil::read_line  fil::stdin)
			#
			THE string
			    =>
			    string == "quit\n"   ??   quit ()
						 ::   loop ();

			NULL
