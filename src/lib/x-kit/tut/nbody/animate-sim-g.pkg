		rx::run_in_x_window_old'  set_up_nbody_app_task  [ rx::DISPLAY server ];

		sleep_for 0.25;

		wait_for_app_task_done ();
	    };


	fun do_it ()
	    =
	    {
		nbody_app_task =   make_task  "nbody app"  [];
		app_task      :=   THE  nbody_app_task;

		rx::run_in_x_window_old  set_up_nbody_app_task;
		#
		sleep_for 0.25;

		wait_for_app_task_done ();
	    };


