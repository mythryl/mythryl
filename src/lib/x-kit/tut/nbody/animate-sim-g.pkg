				make_thread  "sim zoom"  .{
				    #
				    slider_thread  zoom;
				};


				new_translation
				  { ocl => NULL,
				    wid => wide,
				    ht  => high,
				    w_zx,
				    w_zy,
				    zoom
				  };
			    };

