	    if (posixlib::getenv "MYTHRYL_NO_IO_REDIRECT" == NULL)			# Allow users to suppress I/O redirection by setting this.
		#
		fun redirect_one_io_call
			{
			   io_call:  Y -> Z,
			  lib_name:  String,
			  fun_name:  String
			}
		    =
		    {
														call_number =  REF 0;

			\\ (y: Y)
			    =
			    {   Result(Z) =  RESULT Z
					  |  EXCEPTION Exception
					  ;

														n = *call_number;	call_number := n + 1;	# Yes, in principle we should use a mutex. In practice we're testing mono-calling-thread  and the window is small and a bad 'n' is no biggie anyhow.


				oneshot =   make_oneshot_maildrop ();
				#
				io::do {.
														if (*log::debugging) log::note {. "redirected I/O call about to do io_call in io-bound-task-hostthreads.pkg context (-- redirect-slow-syscalls-via-support-hostthreads.pkg)"; }; fi;
					    result =    RESULT (io_call y)
							except
							    x = EXCEPTION x;
														if (*log::debugging) log::note {. "redirected I/O call back from io_call, about to call msp::do in io-bound-task-hostthreads.pkg context (-- redirect-slow-syscalls-via-support-hostthreads.pkg)"; }; fi;


					    mps::do {.

							redirected_calls_done :=  *redirected_calls_done + 1;	# Purely for src/lib/std/src/psx/posix-io-unit-test.pkg
														# No mutex here -- the performance hit wouldn't be worth it and we only use it in a single-threaded context.
														# NB: It is important to do this before the following set(), otherwise posix_io_unit_test will probably miss the last increment.
														if (*log::debugging) log::note {. "redirected I/O call storing result via put_in_oneshot value in microthread-preemptive-scheduler.pkg  (-- redirect-slow-syscalls-via-support-hostthreads.pkg)"; }; fi;
							put_in_oneshot (oneshot, result);
							#
						    };
					};

														result =
				case (get_from_oneshot  oneshot)
				    #
				    RESULT    z =>  {
														if (*log::debugging) log::note {. "redirected I/O call resuming with get_from_oneshot value in microthread-preemptive-scheduler.pkg  (-- redirect-slow-syscalls-via-support-hostthreads.pkg)"; }; fi;
							z;
						    };
				    EXCEPTION x =>  raise exception  x;
				esac;
														result;
			    }; 
		    };

		fun redirect_one_io_call'									# Same as above, except yielding a mailop.
			{
			   io_call:  Y -> Z,
			  lib_name:  String,
			  fun_name:  String
			}
		    =
		    {
														call_number =  REF 0;

			\\ (y: Y)
			    =
			    {

														n = *call_number;	call_number := n + 1;	# Yes, in principle we should use a mutex. In practice we're testing mono-calling-thread  and the window is small and a bad 'n' is no biggie anyhow.


				oneshot =   make_oneshot_maildrop ();
				#
				io::do {.
					    result =    RESULT (io_call y)
							except
							    x = EXCEPTION x;


					    mps::do {.

							redirected_calls_done :=  *redirected_calls_done + 1;	# Purely for src/lib/std/src/psx/posix-io-unit-test.pkg
														# No mutex here -- the performance hit wouldn't be worth it and we only use it in a single-threaded context.
														# NB: It is important to do this before the following set(), otherwise posix_io_unit_test will probably miss the last increment.
							put_in_oneshot (oneshot, result);
							#
						    };
					};

				get_from_oneshot'  oneshot  ==>   (\\ x = case x RESULT y => y; EXCEPTION x => raise exception x; esac);
			    }; 
		    };

