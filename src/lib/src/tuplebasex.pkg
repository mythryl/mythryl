		):				Duple(X),
		( { id => id2a, ... },
		  { id => id2b, ... }
		):				Duple(X)
	      )
	    =
	    case (int::compare (id1a, id2a))
		#
		GREATER =>  GREATER;
		LESS    =>  LESS;
		EQUAL   =>  (int::compare (id1b, id2b));
	    esac;

