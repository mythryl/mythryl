#  Test out some gadgets call 
local
   use C Gtk gtk_enums GtkGadgets

   fun b label msg = @@@.b label [on::clicked (\\ _ => print (msg$"\n"))]
in
   fun main (prog, argv) =
   ( gtk_init::f (prog . argv);
     @@@.window
     [ set::title "Hello",
       on "destroy" gtk_main_quit::f,
       when::expose (\\ _ => (print "Hi There\n"; FALSE)),
       +.vbox (FALSE, 0)
           [+.pack_list (FALSE, false, 0w2)
               [b "One"   "Hello!",
                b "Two"   "World!",
                b "Three" "Goodbye!",
                b "Four"  "Cruel World!"
               ],
            +.pack (FALSE, false, 0w2) (@@@.l "Testing 1 2 3" []),
            +.pack (FALSE, false, 0w2) (FontSelection::new []),
            +.pack (FALSE, false, 0w2)
                (@@@.hbox (FALSE, 0)
                   [+.pack_list (FALSE, false, 0w2)
                      [b "Exit" "Not!",
                       @@@.b "Close" [on::clicked (\\ _ => gtk_exit::f 0)]
                      ]
                   ]
                )
           ],
       show_all
     ];
     gtk_main::f();
     0
   )
end
