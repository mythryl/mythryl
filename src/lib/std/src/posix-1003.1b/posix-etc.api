    api Posix_Etc {
	#
	eqtype User_Id;
	eqtype Group_Id;

	package passwd:     api {
				Passwd;
				#
				name:   Passwd -> String;
				uid:    Passwd -> User_Id;
				gid:    Passwd -> Group_Id;
				home:   Passwd -> String;
				shell:  Passwd -> String;
			    };

	package group:      api {
				Group;
				#
				name:     Group -> String;
				gid:      Group -> Group_Id;
				members:  Group -> List( String );
			    };

	getgrgid:  Group_Id -> group::Group;
	getgrnam:  String   -> group::Group;

	getpwuid:  User_Id  -> passwd::Passwd;
	getpwnam:  String   -> passwd::Passwd;



	#######################################################################
