	min =   w8::min :   (Unt, Unt) -> Unt;
	max =   w8::max :   (Unt, Unt) -> Unt;

	fun format radix
	    =
	    (nf::format_unt radix) o to_large_unt; 

	to_string = format nst::HEX;

	fun scan radix
	    =
	    scan
	    where
		scan_large = number_scan::scan_word radix;

