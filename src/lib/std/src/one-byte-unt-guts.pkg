		    =
		    case (scan_large getc cs)
			#
			THE (w, cs')
			    =>
			    if (it::u1::(>) (w, 0u255))   raise exception OVERFLOW;
			    else			  THE (from_large_unt w, cs');
			    fi;

			NULL => NULL;
		    esac;
	    end;

	from_string
	    =
	    pb::scan_string (scan nst::HEX);

	fun sum unts
	    =
	    sum' (unts, 0u0)
	    where
		fun sum' (      [], result) =>  result;
		    sum' (u ! rest, result) =>  sum' (rest, u + result);
		end;
	    end;

