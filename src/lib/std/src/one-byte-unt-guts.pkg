	bitwise_xor =  w8::bitwise_xor :  (Unt, Unt) -> Unt;
	bitwise_and =  w8::bitwise_and :  (Unt, Unt) -> Unt;

	bitwise_not =  adapt w8::bitwise_not :   Unt -> Unt;

	(*) =  (*) :  (Unt, Unt) -> Unt;
	(+) =  (+) :  (Unt, Unt) -> Unt;
	(-) =  (-) :  (Unt, Unt) -> Unt;
	(/) =  (/) :  (Unt, Unt) -> Unt;
	(%) =  (%) :  (Unt, Unt) -> Unt;

