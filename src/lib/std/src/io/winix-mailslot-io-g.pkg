	fun make_filewriter ch
	    =
	    {   closed_1shot =  make_oneshot_maildrop ();
		#
		closed_mailop
		    =
		    take_from_oneshot'  closed_1shot
			==>
			.{  raise exception iox::CLOSED_IO_STREAM;  };

		slot' = make_mailslot ();

		fun buffer ()
		    =
		    do_one_mailop [

			take_from_mailslot' slot'
			    ==> 
			    (fn v = {   if (rv::length v > 0)
					   #	
					   put_in_mailslot (ch, v);
					fi;

					buffer ();
				    }
			    ),

			closed_mailop
		    ];

