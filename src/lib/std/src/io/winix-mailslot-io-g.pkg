			    =>
			    {   v = get_data buf;
				#
				if (rv::length v > n)
				    #
				    v' = vextract (v, 0, THE n);

				    do_one_mailop [
					nack                  ==>   .{  server (THE v); },
					#	
					put_in_mailslot' (reply_slot, v) ==>   .{  server (THE (vextract (v, n, NULL))); }
				     ];

			       else
				    do_one_mailop [
					nack                  ==>   .{  server (THE v); },
					#
					put_in_mailslot' (reply_slot, v) ==>   .{  server NULL; }
				    ];
				fi;
