	fun print s
            =
            {   stream' = empty stdout;

		pure_io::write (stream', s);
		pure_io::flush stream';
		fill (stdout, stream');
	    };

	fun scan_stream scan_g
            =
	    do_it
            where

                scan = scan_g pure_io::read_one;

	        fun do_it stream
                    =
                    {   instrm = get_instream stream;

		        case (scan instrm)

			    THE (item, instrm')
                                =>
                                {   set_instream (stream, instrm');
			            THE item;
                                };

			    NULL => NULL;
                        esac;
		    };
	    end;

