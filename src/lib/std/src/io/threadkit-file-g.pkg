        =
	make_outstream (pure_io::make_outstream (winix_primitive_io::open_for_append fname, io_exceptions::NO_BUFFERING))
        except ex
            =
            raise exception io_exceptions::IO { function=>"open_for_append", name=>fname, cause=>ex };

