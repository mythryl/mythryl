package libh {

    local 
	lh = dynamic_linkage::open_lib
		    { name   =>  "./intr.so",
                      global =>  TRUE,
                      lazy   => TRUE
                    };
    in
        fun libh s
            =
	    {   sh = dynamic_linkage::lib_symbol (lh, s);

	        \\ () => dynamic_linkage::address sh;
	    };
    end;
};
