				    \}";

		assert_streq  s030  "{   alpha\n\
				    \        = [ beta,\n\
				    \            [ 123, 456, 789 ],\n\
				    \            (gamma + 131)\n\
				    \          ];\n\
				    \    omega\n\
				    \        = [ lambda,\n\
				    \            [ 987, 654, 321 ],\n\
