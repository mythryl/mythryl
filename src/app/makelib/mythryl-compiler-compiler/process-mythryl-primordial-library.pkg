						  { is_runtime_package,
						    extra_static_compile_dictionary,
						    #
						    crossmodule_inlining_aggressiveness,
						    #
						    explicit_core_symbol  =>  ecs,
						    noguid                =>  FALSE
						  };


						tlt::make_thawedlib_tome'
						    attributes
