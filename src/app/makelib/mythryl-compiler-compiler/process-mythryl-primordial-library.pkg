					fun bogus n
					    =
					    sg::THAWEDLIB_TOME_TIN
					      {
						near_imports    =>  [],
						far_imports     =>  [],
						thawedlib_tome  =>  sml (n, inl::use_default, NULL, FALSE, NULL)
					      };

					fun get n
